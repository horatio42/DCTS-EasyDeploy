# ======================
# DCTS EasyStart Config
# ======================

# Domain where the DCTS web app will be accessible
APP_URL=chat.example.com

# Full URL passed to the DCTS app so clients know where to reach LiveKit
LIVEKIT_URL=chat.example.com

# Hostname LiveKit uses for its own config (TURN domain, TLS certs)
LIVEKIT_DOMAIN=chat.example.com

# Database credentials
DB_USER=dcts
DB_PASSWORD=changeme
DB_NAME=dcts
DB_HOST=dcts-mariadb
# MariaDB aliases â€” these must match the values above
MARIADB_USER=dcts
MARIADB_PASSWORD=changeme
MARIADB_DATABASE=dcts
MARIADB_RANDOM_ROOT_PASSWORD=1
DB_PASS=changeme

# LiveKit API credentials (generate unique values for production!)
LIVEKIT_KEY=APIchangeme
LIVEKIT_SECRET=changemesecret

# Enable debug logging (true/false)
DEBUG=false

# ============================
# LiveKit Server Configuration
# ============================

# Port LiveKit listens on for API/WebSocket connections
LK_PORT=7880

# RTC (WebRTC) port for TCP-based ICE candidates
LK_RTC_TCP_PORT=7881

# RTC (WebRTC) port for UDP-based ICE candidates
LK_RTC_UDP_PORT=7882

# Use the server's external/public IP for WebRTC candidates
LK_USE_EXTERNAL_IP=true

# Allow loopback (127.0.0.1) as a WebRTC candidate (useful for local testing)
LK_ENABLE_LOOPBACK_CANDIDATE=false

# Redis address for LiveKit state/coordination
LK_REDIS_ADDRESS=dcts-redis:6379

# Redis authentication (leave empty if no auth)
LK_REDIS_USERNAME=
LK_REDIS_PASSWORD=

# Redis database index
LK_REDIS_DB=0

# Whether Redis connection uses TLS
LK_REDIS_USE_TLS=false

# Enable TURN relay for clients behind restrictive NATs/firewalls
LK_TURN_ENABLED=true

# TURN TLS port (used in Caddy+SSL deployment only)
LK_TURN_TLS_PORT=5349

# TURN UDP port
LK_TURN_UDP_PORT=3478

# Whether TURN uses externally-provided TLS (true for Caddy+SSL, false for no-caddy)
LK_TURN_EXTERNAL_TLS=true

# Path to TLS certificate and key inside the container (Caddy+SSL only)
LK_TURN_CERT_FILE=/certs/${LIVEKIT_DOMAIN}/${LIVEKIT_DOMAIN}.crt
LK_TURN_KEY_FILE=/certs/${LIVEKIT_DOMAIN}/${LIVEKIT_DOMAIN}.key
